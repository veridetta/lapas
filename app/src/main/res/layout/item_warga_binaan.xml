<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

<!--        android:fontFamily="@font/poppins_semibold"-->

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green_corner"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="13sp"
            android:text="Warga binaan ini sudah dapat mengajukan integrasi"/>

        <TextView
            android:id="@+id/tv_nama_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="16sp"
            android:textColor="#000000"
            tools:text="Otto Verdemann"/>

        <!--        android:fontFamily="@font/poppins_regular"-->
        <TextView
            android:id="@+id/tv_type_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="#000000"
            tools:text="Pidana khusus"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>