<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.login.LoginActivity"
        android:background="@drawable/home_page"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="SILAPAS"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/tv_integrasi"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_centerInParent="true"-->
            <!--                android:background="@drawable/rounded_corner"-->
            <!--                android:drawablePadding="@dimen/_4sdp"-->
            <!--                android:fontFamily="@font/poppins_semibold"-->
            <!--                android:text="Ajukan Integrasi"-->
            <!--                android:textColor="@color/black" />-->

            <TextView
                android:id="@+id/tv_pengajuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/rounded_corner"
                android:drawableLeft="@drawable/ic_integrasi"
                android:drawablePadding="@dimen/_4sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Pengajuan Integrasi"
                android:textColor="@color/black" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="@dimen/_78sdp"
                    android:layout_height="@dimen/_88sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/component_11__2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUTAN IIB BENGKULU"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Aplikasi rutan Bengkulu untuk mempermudah proses layanan masyarakat"/>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/tv_account"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/grey2"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/img_reg_log"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:src="@drawable/daftar"
                            android:layout_gravity="center"/>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_reg_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:text="Daftar / Login"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tv_kunjungan_disini"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:strokeWidth="2dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:strokeColor="@color/grey2">

                        <ImageView
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:src="@drawable/antrian_kunjungan"
                            android:layout_gravity="center"/>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:text="Kunjungan"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/integrasi"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/grey2"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:src="@drawable/message"
                            android:layout_gravity="center"/>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Cek Integrasi"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/tv_jadwal_disini"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/grey2"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:src="@drawable/schedule"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Jadwal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tv_titipan_disini"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/grey2"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_43sdp"
                                android:layout_height="@dimen/_43sdp"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:src="@drawable/box"
                                android:layout_gravity="center"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Titipan"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_antrian"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:strokeWidth="2dp"
                            app:strokeColor="@color/grey2"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_38sdp"
                                android:layout_height="@dimen/_38sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_no_antrian" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:text="No Antrian"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

