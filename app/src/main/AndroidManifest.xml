<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ppllapasfix">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage"/>

    <application
        android:name=".di.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PPLLAPASFIX"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.pengajuan.PengajuanActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.informasiakun.InformasiAkunActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.wargabinaandetail.WargaBinaanDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.antrian.AntrianActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pemilihanwargabinaan.PemilihanWargaBinaanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.formulirkunjungan.KunjunganActivity"
            android:exported="false" />
        <activity
            android:name=".ui.formulirtitipan.TitipanActivity"
            android:exported="false" />
        <activity
            android:name=".JadwalActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
    </application>

</manifest>